# platform :ios, '9.0'

use_frameworks!
inhibit_all_warnings!

def shared_pods
  pod "Alamofire"
  pod 'SnapKit', '~> 4.0.0'
  pod 'SwiftLint'
  pod 'Nimble'
end

target 'Pokemon' do
  # Pods for pokemon
  shared_pods
end

target 'PokemonTests' do
    # Pods for testing
    shared_pods
end